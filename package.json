{
  "name": "@speranto/speranto",
  "version": "0.0.3",
  "license": "MIT",
  "author": "Imre Gelens",
  "homepage": "https://github.com/imrec/speranto",
  "repository": {
    "type": "git",
    "url": "https://github.com/imrec/speranto.git"
  },
  "description": "A quick and simple machine translation tool for i18n in webapps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "type": "module",
  "bin": {
    "speranto": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types.d.ts"
    }
  },
  "scripts": {
    "types": "tsc src/types.ts --declaration --emitDeclarationOnly --outDir dist",
    "build": "bun build index.ts --outdir dist --target node",
    "publish": "bun run types && bun run build && bun publish",
    "test": "LLM_API_KEY=test bun test"
  },
  "devDependencies": {
    "@types/babel__generator": "^7.27.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/bun": "latest",
    "@vitest/ui": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@babel/generator": "^7.28.0",
    "@babel/parser": "^7.28.0",
    "@babel/traverse": "^7.28.0",
    "@babel/types": "^7.28.2",
    "@mistralai/mistralai": "^1.7.5",
    "@types/glob": "^9.0.0",
    "@types/mdast": "^4.0.4",
    "commander": "^14.0.0",
    "glob": "^11.0.3",
    "listr2": "^9.0.1",
    "ollama": "^0.5.16",
    "openai": "^5.11.0",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  }
}
